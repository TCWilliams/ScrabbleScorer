<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#156908"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tim.scrabblescorer.EnterPlayersActivity"><![CDATA[>

    ]]>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Enter player names"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/editTextP1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#fdfdfd"
        android:hint="player 1"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextP2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextP1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#fdfdfd"
        android:hint="player 2"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextP3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextP2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#fdfdfd"
        android:hint="player 3"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextP4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextP3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#fdfdfd"
        android:hint="player 4"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextP5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextP4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#fdfdfd"
        android:hint="player 5"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editTextP6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextP5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#fdfdfd"
        android:hint="player 6"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_enter_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextP6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#303f9e"
        android:text="Go!"
        android:onClick="setPlayerNames" />
</RelativeLayout>
