<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerNamesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tim.scrabblescorer.EnterPlayersActivity"><![CDATA[>

    ]]>

    <TextView
        android:id="@+id/textViewEnterNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/enter_names"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:typeface="serif" />

    <LinearLayout
        android:id="@+id/linearLayoutNames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_below="@id/textViewEnterNames"
        android:orientation="vertical">


    </LinearLayout>


    <Button
        android:id="@+id/button_enter_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutNames"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#303f9e"
        android:onClick="setPlayerNames"
        android:text="@string/done_button"
        android:typeface="serif" />
</RelativeLayout>
