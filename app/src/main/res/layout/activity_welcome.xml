<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tim.scrabblescorer.WelcomeActivity"
    android:background="#156908">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome Bidwillites"
        android:id="@+id/textView_welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="2-6"
        android:id="@+id/editText_num_players"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter number of players"
        android:id="@+id/textView_num_players"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:layout_above="@+id/editText_num_players" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/button_go"
        android:layout_below="@+id/editText_num_players"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:textStyle="bold"
        android:background="#303f9d"
        android:onClick="setNumberPlayers" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/textView_num_players"
        android:layout_alignRight="@+id/editText_num_players"
        android:layout_alignEnd="@+id/editText_num_players"
        android:layout_marginBottom="50dp" />
</RelativeLayout>
