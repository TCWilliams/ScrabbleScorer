<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.tim.scrabblescorer.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="30dp"
            android:text="@string/welcome_message"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_colour"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textView_num_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="130dp"
            android:text="@string/select_number_spinner"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_colour"
            android:textSize="25dp"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp"
            android:paddingTop="30dp">

            <Spinner
                android:id="@+id/selectNumberSpinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:entries="@array/number_players_array"
                android:spinnerMode="dropdown"
                android:textColor="@color/text_colour" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/button_colour"
            android:onClick="goToNamesActivity"
            android:text="@string/go_button"
            android:textColor="@color/text_colour"
            android:typeface="serif" />


    </LinearLayout>

</RelativeLayout>
